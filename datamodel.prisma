enum Role {
  MEMBER
  ADMIN
}

enum userStatus {
  AVAILABLE
  FOCUS
  UNAVAILABLE
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  profile: Profile @relation(link: INLINE)
  teams: [Team!]!
}

type Profile {
  id: ID! @id
  user: User!
  name: String
  country: String
  timezone: String
  role: Role! @default(value: MEMBER)
  status: userStatus! @default(value: AVAILABLE)
  workStartTime: Int
  workEndTime: Int
}

type Team {
  id: ID! @id
  name: String!
  users: [User!]! @relation(link: TABLE)
  createdAt: DateTime! @createdAt
}