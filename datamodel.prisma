enum Role {
  Member
  Admin
}

enum userStatus {
  Available
  Focus_mode
  Unavailable
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  profile: Profile @relation(link: INLINE)
  teams: [Team!]!
}

type Profile {
  id: ID! @id
  name: String
  country: String
  timezone: String!
  role: Role! @default(value: Member)
  status: userStatus! @default(value: Available)
  workStartTime: Int
  workEndTime: Int
}

type Team {
  id: ID! @id
  name: String!
  users: [User!]! @relation(link: TABLE)
  createdAt: DateTime! @createdAt
}